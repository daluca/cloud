{
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.rulers": [80],
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[terraform]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "hashicorp.terraform"
    },
    "[terraform-vars]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "hashicorp.terraform"
    },
    "[jsonc]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[shellscript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "files.eol": "\n"
    },
    "files.associations": {
        ".yamllint": "yaml"
    },
    "cSpell.words": [
        "containerd",
        "crowdsec",
        "devture",
        "exim",
        "fluxcd",
        "gitleaks",
        "kubeconform",
        "Kustomization",
        "kustomizations",
        "kustomize",
        "lapi",
        "letsencrypt",
        "markdownlint",
        "pgbouncer",
        "shellcheck",
        "stackgres",
        "supplypike",
        "tfvars"
    ]
}
