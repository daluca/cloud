root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml, yml}]
indent_style = space
indent_size = 2

[*.{tf,tfvars}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[.vscode/*.json]
indent_style = space
indent_size = 4

[.yamllint]
indent_style = space
indent_size = 2
